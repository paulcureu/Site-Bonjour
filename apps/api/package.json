    "@prisma/client": "^6.8.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "env-schema": "^6.0.1",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.3",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
